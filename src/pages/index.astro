---
// Importa los m√≥dulos necesarios
import PostCard from '../components/PostCard.astro';
import type {Post} from '../pages/types/Post';
import Header from '../components/Header.astro';
import Footer from '../components/Header.astro';
import Emcabezado from '../components/Emcabezado.astro';
// Obtiene los posts del API

const res = await fetch('https://jsonplaceholder.typicode.com/posts');
const posts= await res.json();
---

<!-- Ejemplo en src/layouts/BaseLayout.astro -->
<html>
<head>
  <title>Mi Blog en Astro</title>
	<link rel="stylesheet" href="../public/global.css">
</head>
<body>
	<Header />
	<Emcabezado />
  <div class="container">
    <h1>Bienvenido a mi Blog</h1>
    <div>
      {posts.map((post: Post) => (
        <PostCard key={post.id} post={post} />
      ))}
    </div>
  </div>
  	<Footer />
</body>
</html>

